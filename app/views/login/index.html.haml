.ink-grid
	/[if lte IE 9]
		.ink-alert.basic{ role:"alert"}
			%button.ink-dismiss &times;
			%p
				%strong You are using an outdated Internet Explorer version.</strong>
				Please
				%a{ href: "http://browsehappy.com/"} upgrade to a modern browser</a>
				to improve your web experience.

	.column-group.quarter-gutters.align-center.vertical-space
		.all-25
		.all-20.vertical-space.tiny-100
			%img( data-src="holder.js/1200x600/auto/ink" alt="")
		.all-5
		.all-25.vertical-space.verticalLine
			%h3 Welcoming Text
			%p Welcome to ShiftShark :)
			%p We're making scheduling and invoice tools for yoga teachers and studio managers.
			.column-group.quarter-gutters
				.all-20
				.all-25
					%button.ink-button.black Login
				.all-10
				.all-25
					%button.ink-button.blue Signup
				.all-20
		.all-25

%footer.clearfix
	.ink-grid
		%ul.unstyled.inline.half-vertical-space
			%li.active
				%a( href="#") linkielink
			%li
				%a( href="#") linkielink
			%li
				%a( href="#") linkielink
		%p.note copyright text copyright text copyright text
